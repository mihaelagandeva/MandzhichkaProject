{
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "lib": [
      "es2015",
      "DOM"
    ],
    "jsx": "react",
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "esModuleInterop": true,
    "allowJs": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true
  },
  "include": [
    "src/",
  ]
}
